<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="mainBorder" minHeight="400.0" minWidth="600.0" prefHeight="400.0"
maxHeight="Infinity" maxWidth="Infinity"  
prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
  <top>
    <MenuBar fx:id="appMenuBar">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#handleMenuCloseAction" text="Close" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Machines">
          <items>
            <MenuItem id="listMachine" mnemonicParsing="false" onAction="#handleMachineListAction" text="List" />
            <MenuItem id="addMachine" mnemonicParsing="false" onAction="#handleMachineAction" text="Add" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Theorem">
          <items>
            <MenuItem id="listTheorem" mnemonicParsing="false" onAction="#handleTheoremListAction" text="List" />
            <MenuItem mnemonicParsing="false" onAction="#handleTheoremAction" text="Upload" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
</BorderPane>
